<Style name="snowshoeing">
	<!--novice-->
	<Rule>
		&maxscale_zoom9;
		&minscale_zoom12;
		<Filter>[piste:difficulty]='novice' </Filter>
		<LineSymbolizer stroke-width="1" stroke="#64FF64" 
		/>
	</Rule>
	<Rule>
		&maxscale_zoom13;
		&minscale_zoom18;
		<Filter>[piste:difficulty]='novice' </Filter>
		<LineSymbolizer stroke-width="2" stroke="#64FF64" 
		/>
	</Rule>
	<!--easy-->
	
	<Rule>
		&maxscale_zoom9;
		&minscale_zoom12;
		<Filter>[piste:difficulty]='easy' </Filter>
		<LineSymbolizer stroke-width="1" stroke="#6969FF" 
		/>
	</Rule>
	<Rule>
		&maxscale_zoom13;
		&minscale_zoom18;
		<Filter>[piste:difficulty]='easy' </Filter>
		<LineSymbolizer stroke-width="2" stroke="#6969FF" 
		/>
	</Rule>
	<!--intermediate-->
			
	<Rule>
		&maxscale_zoom9;
		&minscale_zoom12;
		<Filter>[piste:difficulty]='intermediate' </Filter>
		<LineSymbolizer stroke-width="1" stroke="#FF6060" 
		/>
	</Rule>
	<Rule>
		&maxscale_zoom13;
		&minscale_zoom18;
		<Filter>[piste:difficulty]='intermediate' </Filter>
		<LineSymbolizer stroke-width="2" stroke="#FF6060" 
		/>
	</Rule>
	<!--advanced-->
			
	<Rule>
		&maxscale_zoom9;
		&minscale_zoom12;
		<Filter>[piste:difficulty]='advanced' </Filter>
		<LineSymbolizer stroke-width="1" stroke="#5A5A5A" 
		/>
	</Rule>
	<Rule>
		&maxscale_zoom13;
		&minscale_zoom18;
		<Filter>[piste:difficulty]='advanced' </Filter>
		<LineSymbolizer stroke-width="2" stroke="#5A5A5A" 
		/>
	</Rule>
	<!--expert-->
			
	<Rule>
		&maxscale_zoom9;
		&minscale_zoom12;
		<Filter>[piste:difficulty]='expert' </Filter>
		<LineSymbolizer stroke-width="1" stroke="#FFC751" 
		/>
	</Rule>
	<Rule>
		&maxscale_zoom13;
		&minscale_zoom18;
		<Filter>[piste:difficulty]='expert' </Filter>
		<LineSymbolizer stroke-width="2" stroke="#FFC751" 
		/>
	</Rule>

<!--                 balls                 -->
	<!--novice-->
	<Rule>
		&maxscale_zoom13;
		&minscale_zoom18;
		<Filter>[piste:difficulty]='novice' </Filter>
		<LineSymbolizer stroke-width="5" stroke="#64FF64" 
		stroke-dasharray="1,10"/>
	</Rule>
	<!--easy-->
	<Rule>
		&maxscale_zoom13;
		&minscale_zoom18;
		<Filter>[piste:difficulty]='easy' </Filter>
		<LineSymbolizer stroke-width="5" stroke="#6969FF" 
		stroke-dasharray="1,10"/>
	</Rule>
	<!--intermediate-->
	<Rule>
		&maxscale_zoom13;
		&minscale_zoom18;
		<Filter>[piste:difficulty]='intermediate' </Filter>
		<LineSymbolizer stroke-width="5" stroke="#FF6060" 
		stroke-dasharray="1,10"/>
	</Rule>
	<!--advanced-->
	<Rule>
		&maxscale_zoom13;
		&minscale_zoom18;
		<Filter>[piste:difficulty]='advanced' </Filter>
		<LineSymbolizer stroke-width="5" stroke="#5A5A5A" 
		stroke-dasharray="1,10"/>
	</Rule>
	<!--expert-->
	<Rule>
		&maxscale_zoom13;
		&minscale_zoom18;
		<Filter>[piste:difficulty]='expert' </Filter>
		<LineSymbolizer stroke-width="5" stroke="#FFC751" 
		stroke-dasharray="1,10"/>
	</Rule>
	<Rule>
		&maxscale_zoom13;
		&minscale_zoom18;
		<Filter>([piste:difficulty]='novice' or [piste:difficulty]='easy'
		or [piste:difficulty]='intermediate' or [piste:difficulty]='advanced'
		or [piste:difficulty]='expert')</Filter>
		<LineSymbolizer stroke-width="3" stroke="#FFFFFF" stroke-opacity="0.7"
		stroke-dasharray="1,10"/>
	</Rule>
	<!--no-difficulty-->
	<Rule>
		&maxscale_zoom9;
		&minscale_zoom12;
		<ElseFilter/>
		<LineSymbolizer stroke-width="1" stroke="#FF9FAF" 
		/>
	</Rule>
	<Rule>
		&maxscale_zoom13;
		&minscale_zoom18;
		<ElseFilter/>
		<LineSymbolizer stroke-width="2" stroke="#FF9FAF" 
		/>
	</Rule>
	<Rule>
		&maxscale_zoom13;
		&minscale_zoom18;
		<ElseFilter/>
		<LineSymbolizer stroke-width="5" stroke="#FF9FAF" 
		stroke-dasharray="1,10"/>
	</Rule>
	<Rule>
		&maxscale_zoom13;
		&minscale_zoom18;
		<ElseFilter/>
		<LineSymbolizer stroke-width="3" stroke="#FFFFFF" stroke-opacity="0.7"
		stroke-dasharray="1,10"/>
	</Rule>
</Style>
