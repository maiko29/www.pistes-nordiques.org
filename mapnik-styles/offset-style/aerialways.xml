<Style name="aerialways">
	<Rule>
		&maxscale_zoom12;
		&minscale_zoom18;
		<LineSymbolizer stroke-width="1" stroke="#4D4D4D"/>
	</Rule>
	<Rule>
		&maxscale_zoom14;
		&minscale_zoom18;
		<Filter>[aerialway]='station'</Filter>
		<PointSymbolizer file="station.png"/>
	</Rule>
</Style>


<Style name="aerialways-icons">
	<Rule>
		&maxscale_zoom14;
		&minscale_zoom18;
		<Filter>[aerialway]='funicular'</Filter>
		<MarkerSymbolizer file="funicular.png"/>
	</Rule>
	<Rule>
		&maxscale_zoom14;
		&minscale_zoom18;
		<Filter>[aerialway]='cable_car'</Filter>
		<MarkerSymbolizer file="cable_car.png"/>
	</Rule>
	<Rule>
		&maxscale_zoom14;
		&minscale_zoom18;
		<Filter>[aerialway]='gondola'</Filter>
		<MarkerSymbolizer file="gondola.png"/>
	</Rule>
	<Rule>
		&maxscale_zoom14;
		&minscale_zoom18;
		<Filter>[aerialway]='chair_lift'</Filter>
		<MarkerSymbolizer file="chair_lift.png"/>
	</Rule>
	<Rule>
		&maxscale_zoom14;
		&minscale_zoom18;
		<Filter>[aerialway]='mixed_lift'</Filter>
		<MarkerSymbolizer file="mixed_lift.png"/>
	</Rule>
	<Rule>
		&maxscale_zoom14;
		&minscale_zoom18;
		<Filter>[aerialway]='t-bar' or [aerialway]='j-bar' or [aerialway]='platter' or [aerialway]='rope-tow' or [aerialway]='drag_lift'</Filter>
		<MarkerSymbolizer file="drag_lift.png"/>
	</Rule>
	<Rule>
		&maxscale_zoom14;
		&minscale_zoom18;
		<Filter>[aerialway]='magic_carpet'</Filter>
		<MarkerSymbolizer file="magic_carpet.png"/>
	</Rule>
</Style>
